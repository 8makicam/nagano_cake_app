<!-- ヘッダーの部分テンプレート -->
<%= render partial: 'admin/header_admin' %>



<div class='container'>
  <div class='row' >
    <h1>商品一覧</h1>
  </div>
    <table class="table">
      <thead>
        <tr>
          <th> 商品ID </th>
          <th> 商品名 </th>
          <th> 税抜価格 </th>
          <th> ジャンル </th>
          <th> ステータス </th>
        </tr>
      </thead>
      <body>
        <% @items.each do |item| %>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= item.name %>
            </td>
            <td>
              <%= item.price %>
            </td>
            <td>
              <%= item.genre.name %>
            </td>
            <td>
              <%= item.is_active ? "販売中" : "販売停止中" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
