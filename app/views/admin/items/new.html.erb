<!-- ヘッダーの部分テンプレート -->
<%= render partial: 'public/header' %>

<!-- BODY部分 -->

<h1>新規商品登録</h1>
<!-- form_with部分 -->
<%= form_with model: @item, url:'/items', local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  
  <h4>商品名</h4>
  <%= f.text_field :name %>
  
  <h4>商品説明</h4>
  <%= f.text_area :body %>
  
  <h4>ジャンル</h4>
  <%= f.select :genre_id, [["ケーキ", "1"], ["ジュース", "2"]], include_blank: "選択して下さい" %>
  
  <h4>税抜価格</h4>
  <%= f.text_field :price %><p>円</p>
  
  <h4>販売ステータス</h4>
  <%= f.select :is_active, [['販売中',0],['販売停止中',1]], { include_blank: true, selected: 0 } %></br>
  
  <%= f.submit '新規登録' %>
<% end %>

