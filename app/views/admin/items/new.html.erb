<!-- ヘッダーの部分テンプレート -->
<%= render partial: 'admin/header_admin' %>

<!-- BODY部分 -->
<div class='container'>
  <div class='row'>
    <h1></h1>
  </div>

  <div class='row'>
    <div class='col-2'>
      <p>新規商品登録</p>
    </div>
  </div>

    <!-- form_with部分 -->
  <div class='row'>
    <%= form_with model: @item, url:admin_items_path, local:true do |f| %>
      <h4>商品画像</h4>
      <%= f.attachment_field :image %>

      <h4>商品名</h4>
      <%= f.text_field :name %>

      <h4>商品説明</h4>
      <%= f.text_area :introduction %>

      <h4>ジャンル</h4>
      <%= f.collection_select :genre_id, Genre.all, :id, :name %>

      <h4>税抜価格</h4>
      <%= f.text_field :price %><p>円</p>

      <h4>販売ステータス</h4>
      <%= f.select :is_active, [["販売中",0],["販売停止中",1]], { include_blank: true, selected: 0 } %>

      <%= f.submit '新規登録' %>
    <% end %>
  </div>
</div>



