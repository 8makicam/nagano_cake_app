  <!-- ヘッダーの部分テンプレート -->
<%= render partial: 'admin/header_admin' %>


<div class='container'>
  <div class='row'>
    <h1>ジャンル管理画面</h1>
  </div>
  
  <div class='row'>
    <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
    <%= f.text_field :name %>
    <%= f.submit '新規登録' %>
    <% end %>
  </div>
  
  <table class='table'>
    <thead>
      <th>ジャンル名</th>
      <th></th>
    </thead>
    <tbody>
      <% @genres.each do |genre_info| %>
      <td><%= genre_info.name %></td>
      <td><%= link_to "Edit", edit_admin_genre_path(genre.id) %></td>
      <% end %>
    </tbody>
  </table>
    
</div>
  

