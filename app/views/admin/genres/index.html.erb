<%= render partial: 'admin/header_admin' %>


<div class='container'>
  <div class='row'>
    <h1>ジャンル管理画面</h1>
  </div>

  <div class='row'>
    <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
    <%= f.text_field :name %>
    <%= f.submit '新規登録' %>
    <% end %>
  </div>

  <table class='table'>
    <thead>
      <tr>
        <th>ジャンル名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集", edit_admin_genre_path(genre.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>


