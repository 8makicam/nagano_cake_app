<!-- ヘッダーの部分テンプレート -->
<%= render partial: 'admin/header_admin' %>

<div class="container">
  <div class="row">
    <h1 class="title">注文詳細履歴</h1>
  </div>
  <div class="row">
    <table class="table">
      <tr><th>購入者</th></tr>
      <tr><td><%= @order.name %></td></tr>
      
      <tr><th>注文日</th></tr>
      <tr><td><%= @order.created_at %></td></tr>
      
      <tr><th>配送先</th></tr>
      <tr><td><%= @order.shipping_address %></td></tr>
      
      <tr><th>支払方法</th></tr>
      <tr><td><%= @order.payment_method %></td></tr>
      
      <tr><th>注文ステータス</th></tr>
      <tr><td><%= @order.is_active %></td></tr>
      
    </table>
  </div>
</div>