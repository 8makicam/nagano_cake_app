<!-- ヘッダーの部分テンプレート -->
<%= render partial: 'admin/header_admin' %>

<div class='container'>
  <div class='row'>
    <%= @customer.last_name %><%= "さんの会員情報" %>
  </div>
  
  <div class='row'>
    <table class='table'>
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>フリガナ</th>
          <th>郵便番号</th>
          <th>住所</th>
          <th>電話番号</th>
          <th>メールアドレス</th>
          <th>会員ステータス</th>
        </tr>
      </thead>
      <tbody>
        <td><%= @customer.id %></td>
        <td><%= @customer.last_name %></td>
        <td><%= @customer.last_name_kana %></td>
        <td><%= @customer.postal_code %></td>
        <td><%= @customer.address %></td>
        <td><%= @customer.telephone_number %></td>
        <td><%= @customer.email %></td>
        <td><%= @customer.is_active ? "有効" : "退会" %></td>
      </tbody>
    </table>
  </div>
  <div class='row'>
    <div class='colmid-5 mx-auto'>
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), method: :get, class: "btn btn-info btn-sm btn-block mb-3 edit" %>
    </div>
  </div>
</div>
